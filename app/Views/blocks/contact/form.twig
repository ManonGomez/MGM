<form action="{{ path_for('contact') }}" method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <input type="text" class="form-control" placeholder="Votre nom complet" id="name" name="pseudo">
        </div>
        <div class="form-group col-md-6">
            <input type="email" class="form-control" placeholder="Votre adresse mail" id="mail" name="email">
        </div>
    </div>
    <div class="form-row">

        <div class="form-group col-md-12">
            <input type="text" class="form-control" placeholder="Le sujet de votre message" id="topic" name="topic">
        </div>
        <textarea  class="form-control" placeholder="Votre message" id="exampleFormControlTextarea1" rows="3" name="message"></textarea>
        <div class="buttonContainer">
            <button class="btn btn-success" type="submit">Envoyer</button>
        </div>
        </div>
</form>